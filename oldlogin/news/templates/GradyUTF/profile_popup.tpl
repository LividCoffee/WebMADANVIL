<div class="box box-widget widget-user">
        <div class="widget-user-header bg-aqua">
          <h3 class="widget-user-username">{fullname}</h3>
          <h5 class="widget-user-desc">{status}</h5>
        </div>
        <div class="widget-user-image">
          <img class="img-circle" src="{foto}" alt="User Avatar">
        </div>
        <div class="box-footer">
          <div class="row">
            <div class="col-sm-4 border-right">
              <div class="description-block">
                <h5 class="description-header">Зарегистрирован</h5>
                <span class="description-text">{registration}</span>
              </div>
            </div>
            <div class="col-sm-4 border-right">
              <div class="description-block">
                <h5 class="description-header">Публикаций</h5>
                <span class="description-text">{news-num}</span>
              </div>
            </div>
            <div class="col-sm-4">
              <div class="description-block">
                <h5 class="description-header">Комментариев</h5>
                <span class="description-text">{comm-num}</span>
              </div>
            </div>
          </div>
        </div>