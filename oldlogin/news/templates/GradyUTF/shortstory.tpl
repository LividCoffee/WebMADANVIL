<div class="col-xs-12 col-sm-12 col-md-6 my">
<div class="panel panel-default columns">
  <div class="panel-body hd2" style="padding: 5px;">
      <a href="{category-url}" class="btn btn-primary btn-xs" style="position: absolute;margin: 5px;">{category}</a>
    <a href="{full-link}">  
    <img src="{image-1}" style="width: 100%;
    height: 250px;
    object-fit: cover;border-radius: 0px;">
      </a>
<div class="author">
  <div class="media">
[rating]
<div class="pull-right">
[rating-type-1]<div class="rate_stars">{rating}</div>[/rating-type-1]
[rating-type-2]
<div class="rate_like">
[rating-plus]
<button class="btn btn-sm btn-default pull-right" style="margin: 5px 0px 0 0;" data-placement="left" data-toggle="tooltip" title="Мне нравится"><i class="fa fa-thumbs-o-up" aria-hidden="true"></i> {rating}</button>
[/rating-plus]
</div>
[/rating-type-2]
</div>
[/rating]
  <div class="media-left media-middle">
      <img class="av" src="{foto}" alt="{login}"/>
  </div>
  <div class="media-body">
      <div class="author__name sp2">{author}</div>
    <div class="author__text"><time datetime="{date=Y-m-d}T{date=H:i:s}" class="ago" data-toggle="tooltip" title="{date}">{date=Y-m-d}</time></div>
  </div>
</div>
  </div>
      <div class="shtext ">
          <div class="sp3"><a href="{full-link}">{title}</a></div>
          {short-story}
          [tags]<hr> <div class="tgs">{tags}</div>[/tags]
      </div>
  </div>
    <div class="panel-footer">
        <a href="{full-link}" class="btn btn-sm btn-default pull-right" style="margin: -5px -5px 0 0;">Подробнее</a>
        <span class="icon-bubble"></span> {comments-num} &nbsp; <span class="icon-eye"></span> {views}</div>
</div>
</div>