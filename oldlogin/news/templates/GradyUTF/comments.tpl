      <div class="row row-broken" style="margin:0px;">
        <div class="col-sm-12 col-xs-12 chat">
            <div class="chat-body">
              <div class="answer left">
                <div class="avatar">
                  <img src="{foto}" alt="User name">
                  <div class="status offline"></div>
                </div>
                <div class="name">
					<ul class="list-inline">
					  <li class="sp2">{author}</li>
					  <li class="ttme"><time datetime="{date=Y-m-d}T{date=H:i:s}" class="ago">{date=Y-m-d}</time> </li>
					  <li>[reply]<button type="button" class="btn btn-xs btn-default" data-placement="right" data-toggle="tooltip" title="Ответить"><i class="icon-action-undo" aria-hidden="true"></i></button>[/reply]</li>
					</ul>
                  </div> 
                <div class="text">
                  {comment}
                </div>
                <div class="time">&#160;</div>
              </div>
            </div>
        </div>
      </div>