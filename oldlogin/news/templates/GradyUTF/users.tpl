<div class="col-md-4 col-sm-6 col-xs-6 my">
	<div class="g-hover-card columns">

      [online]<span class="label label-success" style="margin: 6px 6px 0px 0;position: absolute;z-index: 9;right: 0;">Online</span>[/online]
      [offline]<span class="label label-default" style="margin: 6px 6px 0px 0;position: absolute;z-index: 9;right: 0;">Offline</span>[/offline]
            <span class="efgrays2"><a {profile_m} href="{profile}"><img src="{foto}" style="width: 100%;min-height: 135px;border-radius: 0;object-fit: cover;border-bottom: 3px solid #aab2bd;"></a></span>
		<div class="user-avatar">
		   <img src='{foto}' style="border: 3px solid #aab2bd;object-fit: cover;">
		</div>
		<div class="info">
		   <div class="title">
			  <span class="short-title" style="font-size: 13px;">
          <a {profile_m} href="{profile}" data-toggle="tooltip" title="Последний раз был на сайте: {lastdate}"> 
              {usertitle}
          </a>
      </span>
		   </div>
            <div class="description">
                <ul class="list-inline" style="color: #9499a0;text-align: center;">
                    <li data-toggle="tooltip" title="Новостей"><span class="icon-layers"></span> {news-num}</li>
                    <li data-toggle="tooltip" title="Комментариев"><span class="icon-bubble"></span> {comm-num}</li>
                </ul>
            </div>
		</div>
    	
    </div>

</div>